<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <% unless cart.line_items.empty? %>
  <h2>Ваш кошик</h2>
  <table>
    <%= render(cart.line_items) %>
    <tfoot>
    <tr>
      <th colspan="2">Загальна вартість замовлень:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
    <div class="actions">
        <%= button_to 'Очистити кошик', cart,
                method: :delete,
                data: { confirm: 'Ви впевнені?' } %>
        <%= button_to 'Купити', new_order_path,
                    method: :get,
                      class: "checkout"%>
    </div>
  <% end %>
</article>